<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_20dp"
    android:paddingBottom="@dimen/dimen_20dp"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingRight="@dimen/dimen_20dp"
    android:background="@drawable/ic_background"
    tools:context=".SignInActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_20dp"
        android:id="@+id/linearLayoutCompat"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_90dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_10dp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:background="#000000"
            android:drawableRight="@drawable/ic_error"
            android:text="Image is Mandatory"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textViewid"
            tools:ignore="SpUsage"
            android:text="Id"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:inputType="text"
            android:background="@drawable/background_edit_text"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_5dp"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:id="@+id/editTexyId"
            />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textViewFirstName"
            tools:ignore="SpUsage"
            android:text="@string/first_name"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:background="@drawable/background_edit_text"
                android:paddingTop="@dimen/dimen_5dp"
                android:padding="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:textColorHint="@color/colorAccent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextFirstName"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textViewLastName"
            tools:ignore="SpUsage"
            android:text="@string/last_name"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutLastName">

            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/background_edit_text"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:inputType="text"
                android:paddingLeft="@dimen/dimen_10dp"
                android:textSize="@dimen/dimen_20sp"
                android:id="@+id/editTextLastName"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textViewEmailId"
            android:text="@string/email_id"
            tools:ignore="SpUsage" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutEmailId">

            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/background_edit_text"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:inputType="textEmailAddress"
                android:id="@+id/editTextEmailId"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textViewPhoneNo"
            android:text="@string/phone_number"
            tools:ignore="SpUsage" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutPhoneNumber">

            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/background_edit_text"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:inputType="phone"
                android:id="@+id/editTextPhoneNumber"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textViewDateOfBirth"
            android:text="@string/date_of_birth"
            tools:ignore="SpUsage" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutDateOfBirth">
            <EditText
                android:layout_width="match_parent"
                 android:drawableRight="@drawable/ic_date1"
                android:background="@drawable/background_edit_text"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:id="@+id/editTextDateOfBirth" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/textViewPasseord"
            android:text="@string/password"
            tools:ignore="Deprecated,SpUsage" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:id="@+id/textInputLayoutPassword">
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/background_edit_text"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:inputType="textPassword"
                android:id="@+id/editTextPassword" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textColor="@color/colorLime"
            android:layout_marginBottom="@dimen/dimen_40dp"
            android:background="@drawable/selectorbutton"
            android:id="@+id/buttonEdit"
            android:text="@string/edit"/>
        <Button
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_height="wrap_content"
             android:textColor="@color/colorLime"
            android:background="@drawable/selectorbutton"
            android:layout_marginBottom="@dimen/dimen_40dp"
            android:id="@+id/buttonUpdate"
            android:text="@string/update"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40dp"/>

    </LinearLayout>
    </RelativeLayout>
</ScrollView>